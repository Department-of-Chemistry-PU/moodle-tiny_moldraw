{{!
    @template tiny_moldraw/chemdoodle_iframe

    Insert ketcher window for chemical structure drawing.

    Example context (json):
    {

    }
}}

{{< core/modal }}
    {{$title}}{{#str}} sketchtitle {{/str}}{{/title}}
    {{$body}}
        <div class="wrapper" style="text-align: center">

            <div class="drawing_canvas-container">
                <canvas id="sketcher"></canvas><br><br>
            </div>

            <div class="inputs_size">
                <div class="input_width">
                    <label id="label_width_input_molstructure" for="width_input_molstructure">{{#str}} Width: {{/str}}</label>
                    <input type="number" id="width_input_molstructure" name="width" max="500" min="10" step="5" placeholder="100">
                    <br><br>
                </div>

                <div class="input_height">
                    <label id="label_height_input_molstructure" for="height_input_molstructure">{{#str}} Height: {{/str}}</label>
                    <input type="number" id="height_input_molstructure" name="height" max="500" min="10" step="5" placeholder="100">
                    <br><br>
                </div>
            </div>

            <div class="button_size">
                <button id="button-size-button" onclick="function_resize()">{{#str}} Resize {{/str}}</button><br><br>
            </div>

            <div class="viewer_canvas-container">
                <canvas id="sketcherViewer-atto"></canvas>
            </div>

        </div>
    {{/body}}
    {{$footer}}
        <button id="insert" data-action="insert">{{#str}} Insert {{/str}}</button>
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel {{/str}}</button>
    {{/footer}}
{{/ core/modal }}
